<!-- ========= ***doc description @ yyp*** ==========
单腿3DOF，欠驱动
默认角度单位为360角度
===================================================== -->

<mujoco model="pointfoot">
	<option timestep="0.001" gravity="0 0 -9.81" />
	<include file="./assets/common.xml"/>
	<include file="./assets/world_axes.xml"/>

	<default>
		<!-- 实测这个限制是软的，有点像kp系数在限制驱动 -->
		<!-- <joint damping=".03" frictionloss="0.2" range="-45 45" /> -->
		<!-- 电机驱动力限制 -->
		<motor ctrlrange="-10 10" ctrllimited="true" />
	</default>

	<worldbody>
		<!-- 光线 -->
		<light pos="0 0 3" dir="0 0 -1" directional="true" castshadow="false"/> 
		<!-- 地面 -->
		<geom name="floor" size="0 0 0.01" type="plane" material="groundplane" />

		<!-- 机器人主体 -->
		<body name="torso" pos="0 0 0.57" euler="0 0 0">
			<!-- 悬空吊起需注释下面一行 -->
			<freejoint/>
			<!-- 躯干 -->
			<geom type="box" mass="2" size="0.05 0.15 0.1" rgba="1 0.3 0.3 0.5" contype="1" conaffinity="1" />

			<!-- 右腿 -->
			<body name="right_hip" pos="-0 -0.1 -0.13">
				<!-- 臀部Roll关节 -->
				<joint name="rightHipRol" axis="1 0 0" range="0 0" />
				<geom type="capsule" mass="0.01" size="0.02 0.01" euler="0 90 0" pos="0 0 0" rgba="1 1 0.4 0.5" contype="1" conaffinity="1" />
				<body name="right_thigh" pos="0 0 -0.02">
					<!-- 臀部Pitch关节 -->
					<joint name="rightHipPit" axis="0 1 0" range="-160 160" />
					<geom type="capsule" mass="2" size="0.02" fromto="0 0 -0.03 0 0 -0.17" rgba="0.5 1 0.5 0.5" contype="1" conaffinity="1" />
					<body name="right_shin" pos="0 0 -0.2">
						<!-- 膝关节 -->
						<joint name="rightKnee" axis="0 1 0" range="-160 160" />
						<geom type="capsule" mass="1" size="0.02" fromto="0 0 -0.03 0 0 -0.15" rgba="0.5 1 1 0.5" contype="1" conaffinity="1" />
						<body name="right_foot" pos="0 0 -0.2">
							<!-- 点足球形 有碰撞-->
							<geom name="rightPointFoot" type="sphere" mass="1" size="0.02" rgba="0.5 0.5 0.5 1" friction="1 1 1"/>
						</body>
					</body>
				</body>
			</body>

			<!-- 左腿 -->
			<body name="left_hip" pos="0 0.1 -0.13">
				<!-- 臀部Roll关节 -->
				<joint name="leftHipRol" axis="1 0 0" range="0 0" />
				<geom type="capsule" mass="0.01" size="0.02 0.01 " euler="0 90 0" pos="0 0 0" rgba="1 1 0.4 0.5" contype="1" conaffinity="1" />
				<body name="left_thigh" pos="0 0 -0.02">
					<!-- 臀部Pitch关节 -->
					<joint name="leftHipPit" axis="0 1 0" range="-160 160" />
					<geom type="capsule" mass="2" size="0.02" fromto="0 0 -0.03 0 0 -0.17" rgba="0.5 1 0.5 0.5" contype="1" conaffinity="1" />
					<body name="left_shin" pos="0 0 -0.2">
						<!-- 膝关节 -->
						<joint name="leftKnee" axis="0 1 0" range="-160 160" />
						<geom type="capsule" mass="1" size="0.02" fromto="0 0 -0.03 0 0 -0.15" rgba="0.5 1 1 0.5" contype="1" conaffinity="1" />
						<body name="left_foot" pos="0 0 -0.2">
							<!-- 点足球形 有碰撞-->
							<geom name="leftPointFoot" type="sphere" mass="1" size="0.02" rgba="0.5 0.5 0.5 1" friction="1 1 1"/>
						</body>
					</body>
				</body>
			</body>
		</body>
	</worldbody>

	<actuator>
		<motor name="rightHipRol" joint="rightHipRol" />
		<motor name="rightHipPit" joint="rightHipPit" />
		<motor name="rightKnee" joint="rightKnee" />

		<motor name="leftHipRol" joint="leftHipRol" />
		<motor name="leftHipPit" joint="leftHipPit" />
		<motor name="leftKnee" joint="leftKnee" />
	</actuator>

</mujoco>